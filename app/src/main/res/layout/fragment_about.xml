<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Roman Turas:
         Be sure, used cardView:cardUseCompatPadding="true" !!!
         If not use - cardElevation & translation will NOT work!!!!      -->

    <android.support.v7.widget.CardView
        xmlns:cardView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardAbout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        cardView:cardElevation="7dp"
        cardView:cardBackgroundColor="@color/colorPrimaryBackground"
        cardView:cardCornerRadius="2dp"
        cardView:cardUseCompatPadding="true" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:id="@+id/imgBannerAbout"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/head_about"
                    android:layout_gravity="top"
                    android:foregroundGravity="top" />

                <ua.com.spasetv.testintuitions.tools.ExTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#000000"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:longClickable="false"
                    android:id="@+id/textAboutOne" />

                <include layout="@xml/paragraph_separate" />

                <ua.com.spasetv.testintuitions.tools.ExTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#000000"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:longClickable="false"
                    android:id="@+id/textAboutTwo" />

                <include layout="@xml/paragraph_separate" />

                <ua.com.spasetv.testintuitions.tools.ExTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#000000"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:longClickable="false"
                    android:id="@+id/textAboutThree" />

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</LinearLayout>